<% if current_account.present? %>
	<div class="container">
		<section class="showcase">
			<div class="container-fluid p-0">
				<div class="row no-gutters">
					<div class="col-lg-12 ">
						<div> <h2>Welcome <%= current_account.first_name %></h2> </div>
						<p> Hey <%= current_account.first_name %> your account balance is <%= current_account.account_balance %></p>
						<div class="lead mb-0">
							You can do this by clicking here 	<%= link_to "Add nominee", add_nominee_account_path(current_account.id), method: :get %> . If you are adding multiple nominees, make sure to mention the % of holding that you want to allocate to each nominee so that the sum total is 100%.
						</div>
					</div>
				</div>				
				<br>
			</div>
		</section>
	</div>
	<br><br>
	<div class="container">
	  <div class="row">
			<div class="col-md-4 col-xl-3">
				<div class="card bg-primary text-white">
					<div class="card-block" style="padding:10px">
						<h6 class="text-center m-b-20">Nominators</h6>
						<h2 class="text-center"><i class="fa fa-cart-plus f-left"></i><span><%= @nominated_by.count %></span></h2>
						<br>
					</div>
				</div>
			</div>
			<div class="col-md-4 col-xl-3">
				<div class="card bg-dark text-white">
					<div class="card-block" style="padding:10px">
						<h6 class="text-center m-b-20">Nominees</h6>
						<h2 class="text-center"><i class="fa fa-rocket f-left"></i><span><%= @nominees.count %></span></h2>
						<br>
					</div>
				</div>
			</div>
		</div>
	</div>
	<br><br>
	<div class="container">
		<div class="row">
			<div class="col-sm-6">
				<%if @nominated_by.present? %>
					<h4>Nominator Details</h4> 
					<%= render partial: "users", locals: {users: @nominated_by} %>
				<% else %>
					<div>No one added you as their nominee.</div>
				<% end %>
			</div>
			<div class="col-sm-6">
				<% if @nominees.present? %>
					<h4>Your Nominee Details</h4>
					<%= render partial: "users", locals: {users: @nominees} %>
				<% else%>
					<div>You haven't nominated anyone yet.</div>
				<% end %>
			</div>
		</div>
	</div>
<% end %>


